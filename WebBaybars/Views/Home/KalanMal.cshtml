
@{
    ViewBag.Title = "FiyatGor";
}

@{
    ViewBag.Title = "İbrahim";
}

@model List<WebBaybars.Models.AylikSayim>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<br />
<div class="tab-content">
    <div id="firstTab" class="tab-pane fade in active">
        <table id="employeeTable" class="table table-striped table-condensed demo">
            <thead>
                <tr>
                    <th>
                        Sayısı
                    </th>

                    <th>KalanMal</th>

                    <th>Cinsi</th>

                    <th>Fiyat</th>

                </tr>
            </thead>
            <tbody id="sortable" class="fs">
                @foreach (var item in Model)
                {

                    <tr style="cursor:pointer" class="item taskSingleInline" id="task@(item.Barkod)" data-taskid="@item.Barkod">




                        <td>
                            @Html.DisplayFor(modelItem => item.Barkod) 
                        </td>
                        <td>@WebBaybars.Helpers.Stoklar.KalanToplam(item.Barkod)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cinsi)
                        </td>
                        <th>@item.Fiyat</th>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div id="secondTab" class="tab-pane fade in"></div>

</div>






<link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
@section scripts{

    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>



        function activateJQueryTable() {
            $("#employeeTable").DataTable();


        }
        $(function () {

            activateJQueryTable();

            $("#sortable").sortable({
                update: function (event, ui) {
                    var itemIds = "";
                    $("#sortable").find(".taskSingleInline").each(function () {
                        var itemId = $(this).attr("data-taskid");
                        itemIds = itemIds + itemId + ",";

                    });

                }
            });
        });

    </script>
}



