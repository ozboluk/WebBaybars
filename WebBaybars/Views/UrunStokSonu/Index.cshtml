@model IEnumerable<WebBaybars.Models.AylikSayim>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Barkod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cinsi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToplamStok)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Barkod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cinsi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToplamStok)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Edit", new {  id=item.Id })">
                <div class="jumbotron btn-warning">
                 Düzenle

                </div>
            </a>

        </td>
    </tr>
}

</table>
